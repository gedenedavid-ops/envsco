<section 
  class="py-24 sm:py-32 relative overflow-hidden"
  x-data="{ lightX: 50, lightY: 50 }"
  @mousemove="lightX = ($event.clientX / innerWidth) * 100; lightY = ($event.clientY / innerHeight) * 100"
>

  <!-- Halo Vision Pro -->
  <div 
    class="pointer-events-none absolute inset-0 opacity-40 blur-3xl transition-all duration-500"
    :style="`background: radial-gradient(circle at ${lightX}% ${lightY}%, rgba(120,160,255,0.25), transparent 70%)`"
  ></div>

  <div class="relative mx-auto max-w-3xl px-4 sm:px-6 lg:px-8">

    <!-- Header -->
    <div 
      class="flex flex-col items-center text-center gap-6 mb-16 fade-block relative rounded-3xl px-8 py-10
             backdrop-blur-xl bg-white/10 dark:bg-white/5 border border-white/10
             shadow-[0_0_40px_rgba(120,160,255,0.15)]"
    >

      <!-- Glow interne -->
      <div 
        class="absolute inset-0 rounded-3xl opacity-20 blur-2xl pointer-events-none
               bg-[radial-gradient(circle_at_center,rgba(150,180,255,0.25),transparent_70%)]"
      ></div>

      <span class="relative z-10 text-sm font-medium text-blue-600 dark:text-blue-400 tracking-wide">
        CONTACT
      </span>

      <h2 class="relative z-10 text-4xl font-semibold tracking-tight text-gray-900 dark:text-white sm:text-5xl">
        Restons connectés
      </h2>

      <p class="relative z-10 text-lg text-gray-600 dark:text-gray-300 leading-relaxed max-w-xl">
        Une question, une idée, ou simplement envie d’échanger sur l’école de demain ?
      </p>
    </div>

    <!-- Contact Grid -->
    <dl class="grid gap-8 sm:grid-cols-3 fade-block">

      <!-- Adresse -->
      <a href="https://maps.google.com/?q=Abidjan+Côte+d'Ivoire" target="_blank"
         class="group relative flex flex-col items-center text-center gap-4 p-6 rounded-2xl
                backdrop-blur-xl bg-white/10 dark:bg-white/5 border border-white/10
                shadow-[0_0_25px_rgba(120,160,255,0.15)]
                hover:shadow-[0_0_40px_rgba(120,160,255,0.25)]
                hover:scale-[1.03] transition-all duration-500">

        <!-- Glow interne -->
        <div 
          class="absolute inset-0 rounded-2xl opacity-20 blur-xl pointer-events-none
                 bg-[radial-gradient(circle_at_center,rgba(150,180,255,0.25),transparent_70%)]"
        ></div>

        <div class="relative z-10 w-12 h-12 rounded-xl bg-blue-500/10 dark:bg-blue-400/10 flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </div>

        <dd class="relative z-10">
          <p class="text-lg font-medium text-gray-900 dark:text-white">Abidjan, Côte d’Ivoire</p>
        </dd>
      </a>

      <!-- Téléphone -->
      <a href="tel:+2250716147915"
         class="group relative flex flex-col items-center text-center gap-4 p-6 rounded-2xl
                backdrop-blur-xl bg-white/10 dark:bg-white/5 border border-white/10
                shadow-[0_0_25px_rgba(120,160,255,0.15)]
                hover:shadow-[0_0_40px_rgba(120,160,255,0.25)]
                hover:scale-[1.03] transition-all duration-500">

        <!-- Glow interne -->
        <div 
          class="absolute inset-0 rounded-2xl opacity-20 blur-xl pointer-events-none
                 bg-[radial-gradient(circle_at_center,rgba(150,180,255,0.25),transparent_70%)]"
        ></div>

        <div class="relative z-10 w-12 h-12 rounded-xl bg-blue-500/10 dark:bg-blue-400/10 flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
        </div>

        <dd class="relative z-10">
          <p class="text-lg font-medium text-gray-900 dark:text-white">+225 07 16147915</p>
          <p class="text-sm text-gray-500 dark:text-gray-400">Lun–Ven, 9h–17h</p>
        </dd>
      </a>

      <!-- Email -->
      <a href="mailto:envsco@work-email.com"
         class="group relative flex flex-col items-center text-center gap-4 p-6 rounded-2xl
                backdrop-blur-xl bg-white/10 dark:bg-white/5 border border-white/10
                shadow-[0_0_25px_rgba(120,160,255,0.15)]
                hover:shadow-[0_0_40px_rgba(120,160,255,0.25)]
                hover:scale-[1.03] transition-all duration-500">

        <!-- Glow interne -->
        <div 
          class="absolute inset-0 rounded-2xl opacity-20 blur-xl pointer-events-none
                 bg-[radial-gradient(circle_at_center,rgba(150,180,255,0.25),transparent_70%)]"
        ></div>

        <div class="relative z-10 w-12 h-12 rounded-xl bg-blue-500/10 dark:bg-blue-400/10 flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </div>

        <dd class="relative z-10">
          <p class="text-lg font-medium text-gray-900 dark:text-white">envsco@work-email.com</p>
          <p class="text-sm text-gray-500 dark:text-gray-400">Réponse sous 24h</p>
        </dd>
      </a>

    </dl>

    <!-- Note -->
    <div class="mt-16 text-center fade-block">
      <p class="text-sm text-gray-500 dark:text-gray-400">
        Pour les écoles intéressées par un partenariat, utilisez l’objet 
        <span class="font-medium text-blue-600 dark:text-blue-400">“École Partenaire ENVSCO”</span>
      </p>
    </div>

  </div>
</section>
